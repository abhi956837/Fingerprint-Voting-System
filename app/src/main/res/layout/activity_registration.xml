<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="#e8f5e9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8f5e9"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e8f5e9">

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Time Left: 00:00"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voter Registration Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name (Only letters)"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_aadhar_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhar Card Number (12 digits)"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:inputType="number" />


            <EditText
                android:id="@+id/et_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (dd/MM/yyyy)"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:inputType="date" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age (Only numbers)"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:inputType="number"/>


            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City Name (Only letters)"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:inputType="textAutoComplete" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_fingerprint"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/fp_image"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_scan_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Your Fingerprint to proceed"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000"/>


            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Scanning"
                android:backgroundTint="#25D366"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_already_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already Registered"
                android:backgroundTint="#3B5998"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>